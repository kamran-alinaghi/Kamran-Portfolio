<style>
    html, body {
        margin: 0;
    }

    #c {
        width: 100%;
        height: 100%;
        display: block;
        position: absolute;
        z-index: -1;
        top: 0px;
        left: 0px;
    }

    #whole-page {
        width: 100vw;
        height: 100vh;
        display: block;
        top: 0px;
        left: 0px;
        overflow-x: auto;
        overflow-y: auto;
    }

    #login-view {
        background: linear-gradient(to top right,rgba(0,200,255,0.8) 0%, rgba(0,50,255,0.8) 50%, rgba(255,100,255,0.8) 100%);
        border-radius: 20px;
        border-width: 2px;
        border-color: ghostwhite;
        border-style: solid;
        padding: 20px;
        width:40vw;
        height:60vh;
        min-height: 300px;
        min-width: 300px;
        margin: auto auto;
    }

    #register-form {
        display: grid;
        grid-template-columns: auto;
        margin: auto;
        padding: 5vh 0vw;
    }

    .login-label {
        color: white;
        font-size: 15px;
        margin: 10px 10px 2px 10px;
    }

    .login-input {
        border-radius: 10px;
        border-style: none;
        margin: 2px 10px 10px 10px;
        height: 40px;
        min-height: 30px;
        min-width: 50px;
        max-width: 350px;
        font-size: 20px;
        padding: 1px 10px 1px 10px;
    }

    .password-div {
        max-width: 350px;
        min-width: 50px;
        padding: 0px;
        margin: 0px;
    }

    .login-veiw-a {
        color: white;
        margin: 10px;
        text-decoration: none;
    }

    .forget-pass {
        text-align: right;
        font-size: 15px;
    }

    .login {
        text-align: center;
        font-size: 20px;
    }

    .login:hover{
        color:rgb(255,100,255);
    }

    .register-view-button {
        border-radius: 10px;
        height: 40px;
        width:200px;
        min-height: 30px;
        margin: 10px;
        background: rgb(50,50,255);
    }

</style>
<canvas id="c" style="background-color:black;"></canvas>
<h1>register page</h1>
<div id="whole-page">
    <div id="login-view">
        <form id="register-form" asp-controller="User" asp-action="Register" name="theForm" method="post">
            <label class="login-label" for="name">Name</label>
            <input class="login-input" type="text" id="name" name="name" required placeholder="Your Name" title="Please enter your name" />
            <label class="login-label" for="username">Username</label>
            <input class="login-input" type="text" id="username" name="username" required placeholder="Email" title="Please enter your email address">
            <label class="login-label" for="pass">Password</label>

            <input class="login-input" type="password" id="pass" name="password" required placeholder="Password" title="To view your password, click and hold">
            <label class="login-label" for="dob">Date of Birth</label>
            <input class="login-input" type="text" id="dob" name="DOB" required placeholder="MM/DD/YYYY" title="Please enter your date of birth">
            <input id="register-button" class="register-view-button" type="submit" value="Register">
            <a class="login-veiw-a login" href="login">Or Login</a>
        </form>
    </div>
</div>
