@{
    string copyRigth = "@2024 Kamran Alinaghi. All rights reserved";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kamran_Portfolio</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/MainLayoutStyle.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="main-header">
            <div id="headerContainer" class="header-container bottom-border">
                <span class="kamran-title">Kamran Alinaghi</span>
                <div id="nav-menu" class="menu-bar">
                    <span class="round-button">Work</span>
                    <span class="round-button">Benefits</span>
                    <span class="round-button">Process</span>
                    <span class="round-button">About</span>
                </div>
                <div class="text-or-button">
                    <div id="place-order-button" class="place-order">Project request ></div>
                    <button id="menu-bar-button" class="menu-bar-button"></button>
                    <div id="drop-down-menu" class="drop-down-menu scale-zero" data-visibility="f">
                        <span class="round-button round-button-inside">Work</span>
                        <span class="round-button round-button-inside">Benefits</span>
                        <span class="round-button round-button-inside">Process</span>
                        <span class="round-button round-button-inside">About</span>
                        <span class="round-button round-button-inside">Project request</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer>
        <div class="main-header">
            <div class="footer-container top-border">
                <em class="copy-right">@copyRigth</em>
                <div class="contact-section">
                    <span class="round-button round-button-inside">Contact</span>
                    <span class="round-button round-button-inside">Privacy</span>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script type="module" src="/js/MainLayoutScript.js"></script>
